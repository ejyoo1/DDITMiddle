<%@page import="kr.or.ddit.common.vo.AtchFileVO"%>
<%@page import="kr.or.ddit.commBoard.vo.CommBoardVO"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<%
	CommBoardVO boardVO = (CommBoardVO) request.getAttribute("boardVO");
	
	List<AtchFileVO> atchFileList = (List<AtchFileVO>) request.getAttribute("atchFileList");

%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
</head>
<body>
	<table border="1">
		<tr>
			<td>userId:</td>
			<td><%=boardVO.getUserId() %></td>
		</tr>
		<tr>
			<td>code</td>
			<td><%=boardVO.getCode() %></td>
		</tr>
		<tr>
			<td>boardTitle</td>
			<td><%=boardVO.getBoardTitle() %></td>
		</tr>
		<tr>
			<td>boardContent</td>
			<td><%=boardVO.getBoardContent()%></td>
		</tr>
		<tr>
			<td>첨부파일</td>
			<td>
			<%
			if(atchFileList != null) {
				for(AtchFileVO atchFileVO : atchFileList){
			%>
				<div><a href="<%=request.getContextPath() %>/filedownload.do?fileId=<%=atchFileVO.getAtchFileId()%>
				&fileSn=<%=atchFileVO.getFileSn() %>">
				<%=atchFileVO.getOrignlFileNm() %></a></div>
			
			
			<% 		
				}
			}
			%>
			</td>
		</tr>
		
		<tr>
			<td colspan="2">
				<a href="list.do">[목록]</a>
				<a href="update.do?userId=<%=boardVO.getUserId()%>">[회원정보 수정]</a>
				<a href="delete.do?userId=<%=boardVO.getUserId()%>">[회원정보 삭제]</a>
			</td>
		</tr>
	</table>
</body>
</html>